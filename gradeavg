grades = []
total = 0
for i in range(5):
while True:
       try:
               grade = int(input("Enger grade {}:".format(i+1)))
            grades.append(grade)
            total += grade
            break
        except ValueError:
            print("Invalid input! Please enter a number.").
average = total/len(grades)
print("The average grade is: {:.2f}".format(average))
